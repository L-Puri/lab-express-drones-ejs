<h2>Available drones</h2>

<% drones.forEach((drone) => {%>
    <div style="border: 1px solid black; width: 300px; margin: 20px;">
        <h3> <%= drone.name %></h3>
        <h3> <%= drone.propellers %></h3>
        <h3> <%= drone.maxSpeed %></h3>
        <a href="/drones/<%= drone._id %>/edit">Drone details</a>
        <a href="/drones/<%= drone._id %>/edit">Edit drone</a>
        <a href="/drones/<%= drone._id %>/delete">Delete drone</a>

        <form action="/drones/<%= drone._id %>/delete" method="POST">
            <button type="submit">Delete</button>
        </form>
    </div>
<% }) %>

<a href="/drones/create">Add new drone</a>